<!-- views/login.ejs -->
<!doctype html>
<html>
<head>
	<% include ./partials/head %>
	<link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css"> <!-- load bootstrap css -->
	<link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css"> <!-- load fontawesome -->
</head>
<body id="login">
	<div id="content">
		<header>
			<div id="header">
				<div id="logo"><a href=<%= route %>><img src="/public/images/logo.png"></a></div>
				<div class="clear"></div>
			</div>
		</header>
		<div class="col-sm-6 col-sm-offset-3">
			<h1>Login</h1>

			<!-- show any messages that come back with authentication -->
			<% if (message.length > 0) { %>
				<div class="alert alert-danger"><%= message %></div>
			<% } %>

			<!-- LOGIN FORM -->
			<form action="/login<%= route %>" method="post">
				<div class="form-group">
					<label>Username (not your real name!)</label>
					<input type="text" class="form-control" name="username">
				</div>
				<div class="form-group">
					<label>Password</label>
					<input type="password" class="form-control" name="password">
				</div>
				<div class="form-group">
					<label>Remember Me</label>
					<input type="checkbox" class="form-control" name="remember" value="yes">
				</div>
				<input type="hidden" id="redirect-url" name="redirect_url" value="" />
				<button type="submit" class="btn btn-warning btn-lg">Login</button>
			</form>

			<hr>

			<p>Need an account? <a href="<%= route %>/signup">Sign up here</a></p>
			<p>Or go <a href=<%= route %>>home</a>.</p>
		</div>
		<div class="clear"></div>
	</div>
	<footer>
		<% include ./partials/footer %>
		<% include ./partials/analytics %>
		<script>
			$(document).ready(function() {
				var split_query = window.location.search.split('=');
				if (split_query[0] === '?id' && split_query[1] !== 'undefined') {
					$('#redirect-url').val(split_query[1]);
				}
			});
		</script>
	</footer>
</body>
</html>
